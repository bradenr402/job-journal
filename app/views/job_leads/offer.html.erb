<% page_title = "Set Offer Amount - #{@job_lead.title} @ #{@job_lead.company}" %>

<% content_for :title, page_title %>

<div class="sm:w-7/8 w-full mx-auto">
  <div class="mb-4">
    <%= link_to @job_lead, class: 'btn btn-sm btn-secondary btn-muted gap-1.5 [view-transition-name:back-btn]' do %>
      <%= inline_svg_tag 'icons/arrow-left.svg', class: 'size-3.5 shrink-0' %>
      <span>Back to Job Lead</span>
    <% end %>
  </div>

  <h1 class="heading mb-6"><%= page_title %></h1>

  <%= form_with(model: @job_lead, url: set_offer_job_lead_path(@job_lead), class: '@container mx-auto mt-6') do |form| %>
    <%= render 'components/errors', resource: @job_lead %>

    <div class="mb-5">
      <%= form.label :offer_amount, 'Offer Amount', class: 'form-label' %>

      <%= form.number_field :offer_amount, class: 'form-input', step: '0.01', min: 0, placeholder: '105000' %>
      <p class="text-xs text-muted mt-1">Set an offer amount to advance this job lead to Offer.</p>
    </div>

    <div class="sticky bottom-0 bg-white dark:bg-neutral-950 py-4 max-md:-mx-4 max-md:px-4 max-md:pb-[calc(var(--tab-bar-height)*1.6)] border-t border-neutral-200 dark:border-neutral-800">
      <%= form.submit 'Advance to Offer', class: 'btn btn-primary w-full sm:w-auto' %>
    </div>
  <% end %>
</div>
