<% content_for :title, "Job Lead - #{@job_lead.title} @ #{@job_lead.company}" %>

<div class="sm:w-7/8 w-full mx-auto">
  <div class="mb-4">
    <%= link_to job_leads_path(archived: @job_lead.archived?), class: 'btn btn-sm btn-secondary btn-muted gap-1.5' do %>
      <%= inline_svg_tag 'icons/arrow-left.svg', class: 'size-3.5 shrink-0' %>
      <span>Back to Job Leads</span>
    <% end %>
  </div>

  <%= render @job_lead %>

  <!-- Notes -->
  <div class="mt-12 @container">
    <div class="flex items-center justify-between mb-4">
      <h2 class="subheading">Notes</h2>
      <%= link_to new_note_path(notable_type: 'JobLead', notable_id: @job_lead.id), class: 'btn btn-primary gap-2' do %>
        <%= inline_svg_tag 'icons/note.svg', class: 'size-4 shrink-0' %>
        <span>New Note</span>
      <% end %>
    </div>
    <% if @notes.any? %>
      <div class="grid grid-cols-1 <%= '@xl:grid-cols-2' if @notes.size >= 2 %> <%= '@4xl:grid-cols-3' if @notes.size >= 3 %> gap-4">
        <% @notes.each do |note| %>
          <%= render note %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center my-16 text-muted">
        No notes yet.
      </div>
    <% end %>
  </div>
</div>
