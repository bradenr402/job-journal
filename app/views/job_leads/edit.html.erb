<% page_title = "Editing Job Lead - #{@job_lead.title} @ #{@job_lead.company}" %>

<% content_for :title, page_title %>

<div class="sm:w-7/8 w-full mx-auto">
  <div class="mb-4">
    <%= link_to @job_lead, class: 'btn btn-sm btn-secondary btn-muted gap-1.5' do %>
      <%= inline_svg_tag 'icons/arrow-left.svg', class: 'size-3.5 shrink-0' %>
      <span>Back to Job Lead</span>
    <% end %>
  </div>

  <h1 class="heading mb-6"><%= page_title %></h1>

  <%= render 'form', job_lead: @job_lead %>
</div>
