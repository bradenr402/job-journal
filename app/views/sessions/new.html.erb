<div class="max-w-lg mx-auto sm:w-7/8 w-full">
  <div class="card">
    <h1 class="subheading">Sign In</h1>
    <p class="text-soft">
      Sign in to continue your job search.
    </p>

    <%= form_with url: session_url, model: false, method: :post, class: 'contents' do |form| %>
      <div class="my-5">
        <%= form.label :email_address, 'Email Address', class: 'form-label' %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: 'email', placeholder: 'Enter your email address', value: params[:email_address], class: 'form-input' %>
      </div>

      <div class="my-5">
        <%= form.label :password, class: 'form-label' %>
        <%= form.password_field :password, required: true, autocomplete: 'current-password', placeholder: 'Enter your password', maxlength: 72, class: 'form-input' %>
      </div>

      <div class="flex w-full items-center justify-between gap-2">
        <%= form.submit 'Sign In', class: 'grow btn btn-primary' %>
      </div>
    <% end %>

    <div class="relative my-5">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-neutral-200 dark:border-neutral-800"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-white dark:bg-neutral-900 text-muted">Or sign in with passkey</span>
      </div>
    </div>

    <!-- Passkey Sign In -->
    <div class="my-5">
      <button 
        type="button"
        class="w-full btn btn-secondary gap-2"
        disabled
        title="Passkey authentication coming soon"
      >
        <%= inline_svg_tag 'icons/fingerprint.svg', class: 'size-5 shrink-0' %>
        <span>Sign in with Passkey</span>
      </button>
      <p class="text-xs text-muted text-center mt-2">Passkey authentication coming soon</p>
    </div>

    <div class="flex flex-col items-center gap-2 mt-4">
      <%= link_to 'Forgot password?', new_password_path, class: 'btn-link' %>
      <%= link_to 'Donâ€™t have an account? Sign up', new_registrations_path, class: 'btn-link btn-muted' %>
    </div>
  </div>
</div>
