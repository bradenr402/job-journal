<% content_for :title, 'Search' %>

<div class="sm:w-7/8 w-full mx-auto">
  <div class="mb-4 flex flex-wrap gap-2 items-center justify-between">
    <%= link_to root_path, class: 'btn btn-sm btn-secondary btn-muted gap-1.5' do %>
      <%= inline_svg_tag 'icons/arrow-left.svg', class: 'size-3.5 shrink-0' %>
      <span>Back Home</span>
    <% end %>
  </div>

  <div class="mb-4">
    <h1 class="heading mb-2">
      Search
    </h1>

    <%= render 'form', query: @query, selected_filter: @selected_filter, selected_status: @selected_status, selected_date_range: @selected_date_range, selected_notable_type: @selected_notable_type %>
  </div>

  <%= render 'results', query: @query, results: @results %>
</div>
