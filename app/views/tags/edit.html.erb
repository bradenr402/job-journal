<% content_for :title, "Edit Tag: #{@tag.name}" %>

<div class="sm:w-7/8 w-full mx-auto">
  <div class="mb-4 flex flex-wrap gap-2 items-center justify-between">
    <%= link_to tags_path, class: 'btn btn-sm btn-secondary btn-muted gap-1.5 [view-transition-name:back-btn]' do %>
      <%= inline_svg_tag 'icons/arrow-left.svg', class: 'size-3.5 shrink-0' %>
      <span>Back to Tags</span>
    <% end %>
  </div>

  <div class="mb-4">
    <h2 class="heading">Edit Tag</h2>
    <p class="text-sm text-muted mt-1">Update the name of this tag. Changes will apply to all job leads using this tag.</p>
  </div>

  <%= form_with model: @tag, url: tag_path(@tag), method: :patch do |form| %>
    <div class="space-y-5">
      <div>
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-input', autofocus: true, required: true %>
        <% if @tag.errors[:name].any? %>
          <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= @tag.errors[:name].first %></p>
        <% end %>
      </div>

      <div class="flex gap-2">
        <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', tags_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>
</div>
