<% content_for :title, 'Notes' %>

<div class="sm:w-7/8 w-full mx-auto">
  <div class="mb-4 flex flex-wrap gap-2 items-center justify-between">
    <%= link_to root_path, class: 'btn btn-sm btn-secondary btn-muted gap-1.5' do %>
      <%= inline_svg_tag 'icons/arrow-left.svg', class: 'size-3.5 shrink-0' %>
      <span>Back Home</span>
    <% end %>
  </div>

  <div class="flex justify-between items-center mb-4">
    <h1 class="heading">Notes</h1>
  </div>

  <div id="notes" class="@container">
    <% if @notes.any? %>
      <div class="grid grid-cols-1 <%= ' @xl:grid-cols-2' if @notes.size >= 2 %> <%= '@3xl:grid-cols-3' if @notes.size >= 3 && @notes.size != 4 %> gap-3">
      <% @notes.each do |note| %>
        <%= render note %>
      <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        No notes found.
      </div>
    <% end %>
  </div>
</div>
